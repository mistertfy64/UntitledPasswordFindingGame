<!DOCTYPE html>
<html lang="en">

<head>

  <title>UntitledPasswordFindingGame</title>
  <%- include("../partials/head.ejs")%>

  <link rel="stylesheet" type="text/css" href="/assets/css/global.css" />
</head>

<body>
  <div id="container">
    <header>
      <%- include("../partials/header.ejs",{authentication:authentication}) %>
    </header>
    <main>
      <h1>Answer Clarifications</h1>
      <div id="clarifications-table__wrapper">
        <table id="clarifications-table">
          <tr>
            <th>ID</th>
            <th>Problem ID</th>
            <th>Username</th>
            <th>Answer</th>
            <th>Timestamp</th>
            <th>Verdict</th>
          </tr>
          <% if (data && data.length > 0) { %>
          <% for (const clarification of data) { %>
          <%- include("../partials/unanswered-clarification.ejs",{clarification:clarification}) %>
          <% } %>
          <% } else { %>
          <tr>
            <td colspan="6">No clarifications found.</td>
          </tr>
          <% } %>
        </table>
      </div>
      <div id="page-number">
        Page <%-`${parseInt(page)}`%>
      </div>
      <div id="amount-selector">
        <div>
          <a href="?page=<%= parseInt(page)===1 ? 1 : parseInt(page) - 1 %>&amount=<%= parseInt(amount) %>">Previous</a>
        </div>
        <div>
          <% const amountOptions = [10,25,50,100] %>
          <% amountOptions.forEach(option => { %>
          <a href="?page=<%= page %>&amount=<%= option %>"><%= option %></a>
          <% }); %>
        </div>
        <div>
          <a href="?page=<%= parseInt(page) + 1 %>&amount=<%= parseInt(amount) %>">Next</a>
        </div>
      </div>
    </main>
    <footer>
      <%- include("../partials/footer.ejs") %>
    </footer>
  </div>
</body>

</html>